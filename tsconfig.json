{
    "compilerOptions": {
        "rootDirs": [
            "nodes"
        ],
        "outDir": "dist",
        "target": "ES2019",
        "module": "commonjs",
        "lib": [
            "ES2019",
            "DOM"
        ],
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "nodes/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}